.siteHeader
  background: white
  width 100%
  height: 100px
  position fixed
  top 0
  z-index 99999

  &.animationComplete
    transition .5s
    transition-delay: 0s

  @media desktop
    transition: .5s

  &__logo
    background: url(../images/logo.png) no-repeat
    background-size: 185px 51px
    width: 185px
    height: 51px
    position absolute
    top: 25px
    left: 72px
    text-indent: -9999px; outline: none;
    z-index 999999

    @media desktop
      left 120px

.headerCallouts
  display none

  @media desktop
    display block
    position fixed
    top 24px
    right 20px
    transition: .2s
    z-index: 999999

  @media only screen and (min-width: 1100px)
    right 50px

  &__button

    @media desktop
      &.animationComplete
        transform: 0s

    &--search
      margin-left 5px

      &:hover
        background: link-hover

    &--outline
      color link-color
      border 1px solid link-color

.scrolled
  .siteHeader
    box-shadow: 0 0 10px rgba(0,0,0,.5);

    @media desktop
      width 100%

      &:after
        transform: skewY(0deg);
        height 0

.navOpen
  .siteHeader
    background blue

    &__logo
      background url(../images/logo-white.png) no-repeat
      background-size: 185px 51px

    @media desktop
      width 500px
      height 100vh

    &:before
      height 100vh
      width 100%
      transform: skewY(0deg);
      top 0
      right 0
      left: 0
      transition transform .25s, top .5s cubic-bezier(.67,.02,.27,.95), height .5s cubic-bezier(.67,.02,.27,.95) .25s

      @media desktop
        transform: none
        height auto

    &:after
      @media desktop
        transform: skewY(0deg);

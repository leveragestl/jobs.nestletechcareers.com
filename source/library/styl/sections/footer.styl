.siteFooter
  color darkBrown
  background: tan
  padding 90px 0 50px 0

  a
    color darkBrown

  @media desktop
    padding 90px 0 150px 0

  &--inner
    padding: 0 10px
    text-align: center

  &__title
    margin-bottom 22px
    light()
    font-size 3.2rem

    @media desktop
      font-size 4rem

  &__tagline
    margin-bottom 15px
    light()
    line-height 2.2rem
    font-size 1.7rem

    @media desktop
      font-size 2rem
      line-height 2.5rem

  &__socialList
    margin 0 0 53px 0
    padding 0
    list-style: none
    display flex
    align-items: center
    justify-content: center

  &__socialListItem
    margin 0 25px
    display block
    text-indent: -9999px; outline: none;

    &--twitter
      background: url(../images/icon-twitter-brown.png) no-repeat
      background-size: 38.5px 30.5px
      width 38.5px
      height 30.5px

    &--facebook
      background: url(../images/icon-facebook-brown.png) no-repeat
      background-size: 16.5px 34.5px
      width 16.5px
      height 34.5px

    &--linkedin
      background: url(../images/icon-linkedin-brown.png) no-repeat
      background-size: 35.5px 33.55px
      width 35.5px
      height 33.55px

    &--youtube
      background: url(../images/icon-youtube-brown.png) no-repeat
      background-size: 47.5px 33.5px
      width 47.5px
      height 33.5px

  &__socialListLink
    width 100%
    height 100%
    display block

.linkLists
  margin-bottom 60px
  border-top: 1px solid brown

  @media desktop
    width 960px
    margin 0 auto 85px auto
    border-top 0
    display flex
    flex-wrap: wrap

  &__col
    padding 20px 0 16px 0
    border-bottom: 1px solid brown

    @media desktop
      border-bottom none
      width 25%

    &.active
      .linkLists__colTitle:after
        transform: rotate(-90deg)

  &__colTitle
    margin-bottom 10px
    book()
    letter-spacing: .075rem
    font-size 1.8rem
    text-align: left
    position relative

    &:after
      content ''
      background: url(../images/arrow-footerToggle-brown.png) no-repeat
      background-size: 28.5px 12.5px
      width 28.5px
      height 12.5px
      display block
      position absolute
      top 7px
      right 0
      transition: .25s

      @media desktop
        display none

  &__list
    margin 0
    padding 0
    bold()
    font-size 1.4rem
    line-height 2.5rem
    text-align: left
    list-style: none

    a
      color darkBrown

      @media desktop
        &:hover
          text-decoration: underline

.links
  list-style: none
  margin 0 0 50px 0
  padding 0
  bold()
  font-size 1.5rem
  text-align: left
  display flex
  flex-wrap: wrap

  @media desktop
    align-items: center
    justify-content: center

  li
    width 50%

    @media desktop
      width: auto
      padding 0 15px
      border-right 1px solid darkBrown

      &:last-of-type
        padding-right 0
        border-right: 0

    a
      @media desktop
        &:hover
          text-decoration: underline

.siteFooter__legal
  color darkBrown
  book()
  font-size 1.3rem
  line-height 2.3rem

  @media desktop
    font-size 1.5rem
    width 750px
    margin 0 auto


.hero
  color: white;
  background: url(../images/bg-hero-base@2x.jpg) no-repeat top center;
  background-size: cover;
  width: 100%
  height: calc(100vh - 95px);
  text-align: center;
  position relative
  univers()

  @media tablet
    background: url(../images/bg-hero-650up@2x.jpg) no-repeat;
    background-size: cover;
    height: 850px;

    &--jobsList
      height 650px

  @media desktop
    background: url(../images/bg-hero-960up@2x.jpg) no-repeat;
    background-size: cover;
    height: 865px;

    &--jobsList
      background-position: center center
      height: 60vh;

  &--inner
    width 95%
    height 100%
    margin: 0 auto;
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

  &__title
    color white
    margin-bottom 25px
    font-size 14vw
    line-height 100%
    light()

    @media only screen and (min-width: 1020px)
      font-size 13.3rem

    &--accent
      bold()

  &__tagline
    color white
    margin-bottom 30px
    font-size 4.5vw
    line-height 100%
    univers-roman()

    @media desktop
      font-size 2.5rem

    @media tablet
      font-size: 27px;
      line-height: 29px;
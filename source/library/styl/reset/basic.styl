/* Media Elements */
/*
    * Remove the gap between audio, canvas, iframes,
    * images, videos and the bottom of their containers:
    * https://github.com/h5bp/html5-boilerplate/issues/440
    */

audio,
canvas,
iframe,
img,
svg,
video {
  vertical-align: middle;
}

object {
  width: 100%;
}

img {
  width: 100%;
  display: block;

  &.right {
    margin: 0 0 20px 20px;
    float: right;
  }

  &.fullWidth {
    width: 100%
  }
}

.videoWrap {
  position: relative;
  height: 0;
  overflow: hidden;
  padding-bottom: 56.25%;

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}


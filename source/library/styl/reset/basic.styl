  &::-webkit-scrollbar
    display: none;


html
  font-size: 10px;
  line-height: 1.6rem;

body
  color: text;
  width: 100vw
  font-size: 1.7rem;
  line-height: 3.2rem;
  book()
  padding-top 100px
  overflow-x: hidden

  &.navOpen
    overflow: hidden;

  &.hiringAlertOpen
    @media desktop
      padding-top 230px

.pageWrap
